<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="5dp"
        app:cardBackgroundColor="@color/bg_white"
        app:cardCornerRadius="20dp"
        app:cardElevation="7dp">

        <RelativeLayout
            android:id="@+id/list_item_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:paddingVertical="5dp">

            <TextView
                android:id="@+id/expenseTypeLabel"
                android:layout_width="7dp"
                android:layout_height="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:background="@color/success" />

            <TextView
                android:id="@+id/category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/expenseTypeLabel"
                android:text="Category"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/bg_black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="78dp"
                android:text="Note: " />

            <TextView
                android:id="@+id/amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/payee"
                android:layout_alignParentStart="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="44dp"
                android:text="test"
                android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                android:textColor="@color/bg_black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="18dp"
                android:layout_marginTop="48dp"
                android:text="To: " />

            <TextView
                android:id="@+id/payee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/category"
                android:layout_marginStart="58dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@+id/expenseTypeLabel"
                android:text="Payee" />

            <TextView
                android:id="@+id/note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/category"
                android:layout_marginStart="13dp"
                android:layout_marginBottom="-65dp"
                android:layout_toEndOf="@+id/textView"
                android:text="Note" />

            <TextView
                android:id="@+id/dateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/amount"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:text="9:46 AM, Mar 28"
                android:textAppearance="?android:attr/textAppearanceListItemSmall"
                android:textColor="@color/bg_black"
                android:textSize="12dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>